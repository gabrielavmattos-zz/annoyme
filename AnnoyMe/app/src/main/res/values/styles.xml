<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="fontTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="fontQuestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="fontAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="fontLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#454545</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">45dip</item>
    </style>
    <style name="button">
        <item name="android:color">#424242</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
