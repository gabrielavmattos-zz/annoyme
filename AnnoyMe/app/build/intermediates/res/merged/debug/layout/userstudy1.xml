<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Inicio das perguntas -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/userStudy_p1"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:measureWithLargestChild="false"
                        android:id="@+id/radioGroup_q1"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <RadioButton
                            style="@style/fontAnswer"
                            />

                        <RadioButton
                            style="@style/fontAnswer"
                            android:layout_marginLeft="30dp"/>

                        <RadioButton
                            style="@style/fontAnswer"
                            android:layout_marginLeft="30dp" />

                        <RadioButton
                            style="@style/fontAnswer"
                            android:layout_marginLeft="30dp" />

                        <RadioButton
                            style="@style/fontAnswer"
                            android:layout_marginLeft="30dp" />

                    </RadioGroup>

                    <TextView
                        style="@style/fontQuestion"
                        android:text="@string/userStudy_p2"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:measureWithLargestChild="false"
                        android:id="@+id/radioGroup_q2">

                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/userStudy_p2_r1"/>

                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/userStudy_p2_r2"
                            android:layout_marginLeft="100dp" />

                    </RadioGroup>

                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/userStudy_p3"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:measureWithLargestChild="false"
                    android:id="@+id/radioGroup_q3">

                    <RadioButton
                        style="@style/fontAnswer"
                        android:text="@string/userStudy_p3_r1"/>

                    <RadioButton
                        style="@style/fontAnswer"
                        android:text="@string/userStudy_p3_r2"
                        android:layout_marginLeft="100dp" />

                </RadioGroup>


		<TextView
                    style="@style/fontQuestion"
                    android:text="@string/userStudy_p4"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:measureWithLargestChild="false"
                    android:id="@+id/radioGroup_q4">

                    <RadioButton
                        style="@style/fontAnswer"
                        android:text="@string/userStudy_p4_r1"/>

                    <RadioButton
                        style="@style/fontAnswer"
                        android:text="@string/userStudy_p4_r2"
                        android:layout_marginLeft="100dp" />

                </RadioGroup>


            <CheckBox
                style="@style/fontAnswer"
                android:text="@string/userStudy_p4_r3"
                android:id="@+id/checkbox_q4"/>

                <Button
                    style="@style/button"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_avancar"
                    android:id="@+id/button_userStudy1"
                    android:layout_gravity="left|center_vertical"
                    android:allowUndo="false"
                    android:layout_marginLeft="225dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
