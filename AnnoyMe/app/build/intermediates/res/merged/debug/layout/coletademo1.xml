<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra de etapas -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:foregroundGravity="center">

            <TextView
                style="@style/fontTitle"
                android:text="@string/coletaDemo1"
                android:id="@+id/title" />

    </android.support.v7.widget.Toolbar>

    <!-- Inicio das perguntas -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/coletaDemo1_p1"/>

                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/coletaDemo1_p2"
                    android:layout_marginLeft="120dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/radioGroup_q1"
                        android:orientation="vertical">

                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p1_r1" />

                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p1_r2" />

                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroup_q2">


                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p2_r1"
                            android:layout_marginLeft="55dp" />


                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p2_r3"
                            android:layout_marginLeft="55dp" />
                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p2_r2"
                            android:layout_marginLeft="55dp" />


                        <RadioButton
                            style="@style/fontAnswer"
                            android:text="@string/coletaDemo1_p2_r4"
                            android:layout_marginLeft="55dp" />

                    </RadioGroup>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/coletaDemo1_p3"/>

                <RadioGroup
                    style="@style/fontAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/radioGroup_q3"/>


                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/coletaDemo1_p4"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r1"
                                android:id="@+id/checkbox_p4_r1"/>

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r3"
                                android:id="@+id/checkbox_p4_r3"/>

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r5"
                                android:id="@+id/checkbox_p4_r5"/>

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r7"
                                android:id="@+id/checkbox_p4_r7"/>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r2"
                                android:id="@+id/checkbox_p4_r2"/>

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r4"
                                android:id="@+id/checkbox_p4_r4"/>

                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r6"
                                android:id="@+id/checkbox_p4_r6"/>


                            <CheckBox
                                style="@style/fontAnswer"
                                android:text="@string/coletaDemo1_p4_r8"
                                android:id="@+id/checkbox_p4_r8"/>


                        </LinearLayout>


                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        style="@style/fontAnswer"
                        android:text="@string/coletaDemo1_p4_r9"
                        android:id="@+id/checkbox_p4_r9"/>

                    <EditText
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textOutros"
                        android:singleLine="false"
                        android:inputType="text"
                        android:maxLines="1" />

                </LinearLayout>


                <TextView
                    style="@style/fontQuestion"
                    android:text="@string/coletaDemo1_p5"/>

                <RadioGroup
                    style="@style/fontAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/radioGroup_q5"/>

                <Button
                    style="@style/button"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_avancar"
                    android:id="@+id/button_coletademo1"
                    android:layout_gravity="left|center_vertical"
                    android:allowUndo="false"
                    android:layout_marginLeft="225dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout><!-- From: file:/home/gabriela/Dropbox/annoyme/AnnoyMe/app/src/main/res/layout/coletademo1.xml -->